{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./node_modules/@workspace/design-system/**/*.{js,jsx,ts,tsx}",
    "./node_modules/@workspace/utils/**/*.{js,jsx,ts,tsx}",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
