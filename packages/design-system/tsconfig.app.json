{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "composite": true, // 프로젝트 참조를 위해 필요
    "jsx": "react-jsx",
    "allowArbitraryExtensions": true,

    /* Output */
    "declaration": true,
    "emitDeclarationOnly": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"]
    }
  },
  "include": ["src"]
}
